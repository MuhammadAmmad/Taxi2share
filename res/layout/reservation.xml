<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.09"
        android:background="@drawable/nav_bar"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:onClick="back_home" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_nav_bar" />
        </LinearLayout>

        
        <LinearLayout
            android:id="@+id/back_di"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.01" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.08"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textColor="#ff5e88c5"
                android:textSize="16.0dip"
                android:textStyle="bold" />
        </LinearLayout>

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.01" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.69"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <ScrollView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.95"
            android:background="@drawable/block_profil" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_profil"
                android:orientation="vertical" >

                <!-- *****************************NAME****************************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Name :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>

                <!-- ********************************LAST NAME******************************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Last Name :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                      
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>

                <!-- *************** EMAIL ******************************************* -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Email :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>
                <!-- ************************* PHONE ************************************ -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Phone Number :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                      
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>

                <!-- *********** date of departure ************************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Departure Date:"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/Button01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Departure Date" >
                        </Button>

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="date_text"
                              android:textStyle="bold"
                           android:textColor="#000000"
                           android:layout_marginLeft="10dp"
                            android:typeface="sans" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <!-- ********************* hour of departure ******************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Departure Time :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/Button02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Departure Time" >
                        </Button>

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time_text"
                            android:textStyle="bold"
                           android:textColor="#000000"
                           android:layout_marginLeft="10dp"
                            android:typeface="sans" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <!-- ********************** place of dep *************************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Departure Place :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/place_dep"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>

                <!-- **************************** place of arrival ******************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Arrival Place :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/place_des"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                      
                     
                        android:gravity="center"
                        android:paddingLeft="5.0dip"
                        android:textColor="#ff6d6c6c" />
                </LinearLayout>

                <!-- ******************************mode of payment************************** -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Payment :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="216.0dip"
                        android:layout_height="56.0dip"
                        android:layout_weight="1.0"
                        android:entries="@+array/item_payment" />
                </LinearLayout>

                <!-- ************************ want to share taxi ************************* -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Share Taxi with Passengers :"
                        android:textColor="#ff6d6c6c"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/shre_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radioButton0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="0"
                            android:textColor="#000000" />

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#000000" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 "
                            android:textColor="#000000" />
                    </RadioGroup>
                </LinearLayout>

                <!-- **************************************************************** -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.016" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.081"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.95" >

            <Button
                android:id="@+id/enregistrer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_confirme"
                android:gravity="center"
                android:text="Send"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- android:background="@+android:color/transparent" -->
