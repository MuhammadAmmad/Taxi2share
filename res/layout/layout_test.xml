<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_comp"
    android:orientation="vertical"
    android:weightSum="0.69" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.19"
        android:background="@drawable/nav_bar"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:onClick="fin_de_service"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_logout_c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_nav_bar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:gravity="right|center"
            android:onClick="retour" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_retour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_di"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:onClick="back_home"
            android:orientation="horizontal" />
    </LinearLayout>
    <!-- ******************************************************************************************************** -->

    <ScrollView
        android:id="@+id/vertical_scrollview_id3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
        android:fillViewport="true"
        android:scrollbars="none"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:weightSum="6.5" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:weightSum="0.3" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="15/12/2014"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/client1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:weightSum="2" >
                
                    <LinearLayout 
                         android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="@drawable/green_edittext">
                
                <TextView
                    android:id="@+id/pass_info1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="2"
                    android:textColor="#000000"
                    
                   
                    android:text="client 1 on board"
                    android:textStyle="bold" />
                
                <Button 
                    android:id="@+id/start_stop1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="Stop"
                    android:textStyle="bold"
                     android:background="@drawable/green_edittext"
                    android:textSize="11dp" />
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent" 
                    android:layout_weight="0.1"></LinearLayout>
                
                 <TextView
                    android:id="@+id/timer1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="0.5"
                   
                    android:textColor="#000000"
                    android:background="@drawable/green_edittext"
                   	
                    android:text="00:00:00"
                    android:textStyle="bold" />
            </LinearLayout>
            
                     <LinearLayout
                           android:id="@+id/client2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:weightSum="2" >
                
                     <LinearLayout 
                         android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="@drawable/green_edittext">
                
                <TextView
                    android:id="@+id/pass_info2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="2"
                    android:textColor="#000000"
                    
                   
                    android:text="client 2 on board"
                    android:textStyle="bold" />
                
                <Button 
                    android:id="@+id/start_stop2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="Stop"
                    android:textStyle="bold"
                     android:background="@drawable/green_edittext"
                    android:textSize="11dp" />
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent" 
                    android:layout_weight="0.1"></LinearLayout>
                
                 <TextView
                    android:id="@+id/timer2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                   	android:layout_weight="0.5"
                   
                    android:textColor="#000000"
                    android:background="@drawable/green_edittext"
                   	
                    android:text="00:00:00"
                    android:textStyle="bold" />
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_weight="2.5"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:background="@drawable/map_t" />
            
            <ScrollView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/vertical_outer_layout_id3"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="2.5"
                android:orientation="vertical" >
            </LinearLayout>
            
            </ScrollView>
        </LinearLayout>
    </ScrollView>
    <!-- ***************************************************************************************************** -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_weight="0.13"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp" >

        <Button
            android:id="@+id/librate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/liberate" />
    </LinearLayout>

</LinearLayout>