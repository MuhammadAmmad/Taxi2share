<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/label_client"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <!-- ****************************************** -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/driver" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5dp"
                    android:text="Client 1"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/f_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/phone_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#66FFFF"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/btn_other_loccation_1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up :"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/depar_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="Rue kelibia 8090"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination :"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/destin_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="Rue kelibia 8090"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_other_loccation_1"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <!-- **************************** STREP_FILE ************************************** -->

            <LinearLayout
                android:id="@+id/strep_file"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="4" >

                <!-- ************************DISTANCE***************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Distance:"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/nbr_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="3 Km"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />
                </LinearLayout>

                <!-- ************************** JOURNEY ********************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Price:"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="150 "
                            android:textColor="#ffffffff"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ****************** TAX ************************************* -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="BoardingFee:"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/boarding1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />
                </LinearLayout>

                <!-- ******************** DRIVING TIME**************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="DrivingTime:"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/driving_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffffff"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- ********************************************************************************** -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.7" >

                <Button
                    android:id="@+id/counter1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1.7"
                    android:background="@drawable/green_edittext"
                    android:text="Start Counter" />

                <Button
                    android:id="@+id/stop1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1.7"
                    android:background="@drawable/red_edittext"
                    android:text="Stop Counter"
                    android:visibility="invisible" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.3" >
            </LinearLayout>

            <TextView
                android:id="@+id/timer1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/green_edittext"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>