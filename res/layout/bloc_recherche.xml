<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@+drawable/blocks"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <MultiAutoCompleteTextView
                android:id="@+id/pik"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:background="@+android:color/transparent"
                android:drawableLeft="@+drawable/localisation_user"
               	
                android:gravity="center"
                android:hint="Pick up"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:textColor="#ff5e88c5"
                android:textColorHint="#ff5e88c5" />
            
            <Button
                android:id="@+id/cancel_dfault_depart"
                 android:layout_width="20.0dip"
                android:layout_height="20dp"
                android:background="@drawable/btn_annuler_n" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <MultiAutoCompleteTextView
                android:id="@+id/des"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:background="@+drawable/celule_order"
                android:gravity="center"
                android:hint="Destination :"
               android:textColor="#ff5e88c5"
                android:textColorHint="#ff5e88c5"
                 android:completionThreshold="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@+drawable/block_sep" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@+drawable/icon_passngers_n" />

            <Button
                android:id="@id/down_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:background="@+drawable/btn_moin_n"
                android:onClick="num_editdown"/>

            <TextView
                android:id="@id/nbr_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@+drawable/celule_nbre"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffffff" />

            <Button
                android:id="@id/up_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@+drawable/btn_plus_n"
              android:onClick="num_editup"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@+drawable/separateur" />

            <Button
                android:id="@+id/down_baga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@+drawable/btn_moin_n"
                 android:onClick="num_editdown1"/>

            <TextView
                android:id="@+id/nbr_baga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@+drawable/celule_nbre"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/up_bage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:background="@+drawable/btn_plus_n"
                 android:onClick="num_editup1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:src="@+drawable/icon_luggage_n" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@+drawable/block_sep" />

        
    </LinearLayout>

</LinearLayout>

