<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
   
    android:orientation="vertical"
   
    android:weightSum="1.0" >

    

    <LinearLayout
        android:id="@+id/vertical_outer_layout_id3"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1.0" >

<LinearLayout
  	  android:layout_marginTop="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          android:background="@drawable/blue"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="7dp"
            android:weightSum="5" >
            
            <!-- *********************************************************************************************************************** --> 
              <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="#4F94CD"
          
            android:gravity="center" >

            <!-- **************************** STREP_FILE ************************************** -->

            <LinearLayout
                android:id="@+id/strep_file"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="4" >

                <!-- ************************DISTANCE***************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance:"
                        android:layout_gravity="center_horizontal"
                        android:textSize="11dp"
                        android:textColor="#ffffffff" />

                    <TextView
                       android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="11dp"
                         android:layout_gravity="center_horizontal"
                         android:textColor="#ffffffff"
                        android:text="3 Km" />
                </LinearLayout>

                <!-- ************************** JOURNEY ********************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                         android:textSize="11dp"
                         android:layout_gravity="center_horizontal"
                        android:textColor="#ffffffff" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                             android:textColor="#ffffffff"
                             android:textSize="11dp"
                            android:text="150 " />
                    </LinearLayout>
                </LinearLayout>

                <!-- ****************** TAX ************************************* -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BoardingFee:"
                        android:layout_gravity="center_horizontal"
                         android:textSize="11dp"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/boarding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="11dp"
                         android:layout_gravity="center_horizontal"
                          android:textColor="#ffffffff" 
                       />
                </LinearLayout>

                <!-- ******************** DRIVING TIME**************************** -->

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DrivingTime:"
                         android:textSize="11dp"
                         android:layout_gravity="center_horizontal"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/driving_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="11dp"
                         android:textColor="#ffffffff"
                         android:layout_gravity="center_horizontal"
                        android:text=" 0.50â‚¬/M" />
                </LinearLayout>
            </LinearLayout>
           
        </LinearLayout>
         <!-- ************************************************************************************************************************ -->
		 <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:layout_marginTop="12dp"
                  android:orientation="horizontal">
                  
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:textColor="#F00000"
                      android:textStyle="bold"
                      android:text="Normal Price to pay  :  "/>
                  
                   <TextView 
                         android:id="@+id/price_to_pay"
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                       android:textColor="#F00000"
                       android:textStyle="bold"
                     />
              </LinearLayout>
              <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                   android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp">
                   <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:textColor="#ffffff"
                      android:textStyle="bold"
                      android:text="Loyalty Card  :  "/>
                  
                   <TextView 
                        android:id="@+id/fidelity_card"
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                       android:textColor="#ffffff"
                       android:textStyle="bold"
                      />
              </LinearLayout>
              <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                   android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp">
                   <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:textColor="#33FF00"
                      android:textStyle="bold"
                      android:text="Taxi2Share Price   :  "/>
                  
                   <TextView
                        android:id="@+id/sharing_price_to_pay" 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                       android:textColor="#33FF00"
                       android:textStyle="bold"
                     />
              </LinearLayout>
           </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Rate Your Driver"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Rate it!"
                android:textColor="#66CCFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#66CCFF" >
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp" />

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:ems="10" >
            </EditText>

            <Button
                android:id="@+id/rate"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SUBMIT" />

        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>